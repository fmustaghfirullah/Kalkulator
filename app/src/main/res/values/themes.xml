<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Style untuk Tombol Kalkulator -->
    <style name="CalculatorButton.DarkGray" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/dark_gray</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">30sp</item>
        <item name="fontFamily">sans-serif-light</item>
        <item name="cornerRadius">100dp</item>
    </style>

    <style name="CalculatorButton.Orange" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/orange</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">30sp</item>
        <item name="fontFamily">sans-serif-light</item>
        <item name="cornerRadius">100dp</item>
    </style>

    <style name="CalculatorButton.Gray" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/gray</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">30sp</item>
        <item name="fontFamily">sans-serif-light</item>
        <item name="cornerRadius">100dp</item>
    </style>

    <!-- Tema untuk Aplikasi -->
    <style name="Theme.Kalkulator" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Atribut tema aplikasi -->
        <item name="colorPrimary">@color/my_primary_color</item>
        <item name="colorPrimaryVariant">@color/my_primary_variant</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/my_secondary_color</item>
        <item name="colorSecondaryVariant">@color/my_secondary_variant</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:windowBackground">@color/black</item>
    </style>
</resources>