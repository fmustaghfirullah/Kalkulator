<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/black"
    android:paddingVertical="20dp"
    android:gravity="start|center_vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp">

        <FrameLayout
            android:layout_width="48dp"
            android:layout_height="48dp">
            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_arrow_back"
                android:contentDescription="Kembali ke Menu Utama"
                app:tint="@android:color/white" />
        </FrameLayout>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/nama"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:gravity="end"
            android:paddingEnd="16dp" /> </LinearLayout>


    <TextView
        android:id="@+id/tvDisplay"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="end|bottom" android:text="0"
        android:textColor="@android:color/white"
        android:textSize="90sp" android:padding="0dp"
        android:paddingEnd="16dp"
        android:paddingStart="16dp"
        android:maxLines="1"
        android:ellipsize="start" /> <LinearLayout
    android:id="@+id/buttonlayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="8dp"> <LinearLayout
    android:id="@+id/scientificRow1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="5"
    android:visibility="gone">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnRadDeg"
        style="@style/CalculatorButton.Gray"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_weight="1"
        android:text="Rad"
        android:textSize="18sp"
        app:cornerRadius="35dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSin"
        style="@style/CalculatorButton.Gray"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_weight="1"
        android:text="sin"
        android:textAllCaps="false"
        android:textSize="18sp"
        app:cornerRadius="35dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnCos"
        style="@style/CalculatorButton.Gray"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_weight="1"
        android:text="cos"
        android:textAllCaps="false"
        android:textSize="18sp"
        app:cornerRadius="35dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnTan"
        style="@style/CalculatorButton.Gray"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_weight="1"
        android:text="tan"
        android:textAllCaps="false"
        android:textSize="18sp"
        app:cornerRadius="35dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnLn"
        style="@style/CalculatorButton.Gray"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_weight="1"
        android:text="ln"
        android:textAllCaps="false"
        android:textSize="18sp"
        app:cornerRadius="35dp" />
</LinearLayout>

    <LinearLayout
        android:id="@+id/scientificRow2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="5"
        android:visibility="gone">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnPi"
            style="@style/CalculatorButton.Gray"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:text="π"
            android:textSize="18sp"
            app:cornerRadius="35dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnE"
            style="@style/CalculatorButton.Gray"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:text="e"
            android:textAllCaps="false"
            android:textSize="18sp"
            app:cornerRadius="35dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnPower"
            style="@style/CalculatorButton.Gray"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:text="xʸ"
            android:textAllCaps="false"
            android:textSize="18sp"
            app:cornerRadius="35dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnRoot"
            style="@style/CalculatorButton.Gray"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:text="√"
            android:textAllCaps="false"
            android:textSize="18sp"
            app:cornerRadius="35dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnLog"
            style="@style/CalculatorButton.Gray"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:text="log"
            android:textAllCaps="false"
            android:textSize="18sp"
            app:cornerRadius="35dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnClear"
            style="@style/CalculatorButton.Gray"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:text="AC"
            android:textSize="28sp"
            app:cornerRadius="40dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnPlusMinus"
            style="@style/CalculatorButton.Gray"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:text="+/-"
            android:textSize="28sp"
            app:cornerRadius="40dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnPercentage"
            style="@style/CalculatorButton.Gray"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:text="%"
            android:textSize="28sp"
            app:cornerRadius="40dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnDivide"
            style="@style/CalculatorButton.Orange"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:text="÷"
            android:textSize="36sp"
            app:cornerRadius="40dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn7"
            style="@style/CalculatorButton.DarkGray"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:text="7"
            android:textSize="36sp"
            app:cornerRadius="40dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn8"
            style="@style/CalculatorButton.DarkGray"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:text="8"
            android:textSize="36sp"
            app:cornerRadius="40dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn9"
            style="@style/CalculatorButton.DarkGray"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:text="9"
            android:textSize="36sp"
            app:cornerRadius="40dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnMultiply"
            style="@style/CalculatorButton.Orange"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:text="×"
            android:textSize="36sp"
            app:cornerRadius="40dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn4"
            style="@style/CalculatorButton.DarkGray"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:text="4"
            android:textSize="36sp"
            app:cornerRadius="40dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn5"
            style="@style/CalculatorButton.DarkGray"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:text="5"
            android:textSize="36sp"
            app:cornerRadius="40dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn6"
            style="@style/CalculatorButton.DarkGray"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:text="6"
            android:textSize="36sp"
            app:cornerRadius="40dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSubtract"
            style="@style/CalculatorButton.Orange"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:text="-"
            android:textSize="36sp"
            app:cornerRadius="40dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn1"
            style="@style/CalculatorButton.DarkGray"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:text="1"
            android:textSize="36sp"
            app:cornerRadius="40dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn2"
            style="@style/CalculatorButton.DarkGray"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:text="2"
            android:textSize="36sp"
            app:cornerRadius="40dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn3"
            style="@style/CalculatorButton.DarkGray"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:text="3"
            android:textSize="36sp"
            app:cornerRadius="40dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnAdd"
            style="@style/CalculatorButton.Orange"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:text="+"
            android:textSize="36sp"
            app:cornerRadius="40dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCalcMenu"
            style="@style/CalculatorButton.DarkGray"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            app:icon="@drawable/calculator" app:iconTint="@android:color/white" app:iconGravity="textStart" app:iconSize="30dp" app:iconPadding="0dp" app:cornerRadius="40dp"
            android:paddingStart="0dp" android:paddingEnd="0dp" android:insetTop="0dp" android:insetBottom="0dp" android:insetLeft="0dp" android:insetRight="0dp"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn0"
            style="@style/CalculatorButton.DarkGray"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:text="0"
            android:textSize="36sp"
            app:cornerRadius="40dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnDot"
            style="@style/CalculatorButton.DarkGray"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:text="."
            android:textSize="36sp"
            app:cornerRadius="40dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnEquals"
            style="@style/CalculatorButton.Orange"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:text="="
            android:textSize="36sp"
            app:cornerRadius="40dp" />
    </LinearLayout>
</LinearLayout>
</LinearLayout>